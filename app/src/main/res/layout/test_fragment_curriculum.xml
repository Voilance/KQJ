<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/v0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"/>

    <LinearLayout
        android:id="@+id/ll_weekdays"
        android:orientation="horizontal"
        android:layout_below="@id/v0"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:id="@+id/v2"
                android:layout_alignParentLeft="true"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGray"/>

            <TextView
                android:id="@+id/tv_week"
                android:layout_toRightOf="@id/v2"
                android:layout_toLeftOf="@id/v3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="第二十周"
                android:textSize="15sp"
                android:textColor="@color/colorLightBlue"/>

            <View
                android:id="@+id/v3"
                android:layout_alignParentRight="true"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGray"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_monday"
                    android:layout_toLeftOf="@id/v4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="周一"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

                <View
                    android:id="@+id/v4"
                    android:layout_alignParentRight="true"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGray"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_tuesday"
                    android:layout_toLeftOf="@id/v5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="周二"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

                <View
                    android:id="@+id/v5"
                    android:layout_alignParentRight="true"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGray"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_wednesday"
                    android:layout_toLeftOf="@id/v6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="周三"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

                <View
                    android:id="@+id/v6"
                    android:layout_alignParentRight="true"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGray"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_thursday"
                    android:layout_toLeftOf="@id/v7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="周四"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

                <View
                    android:id="@+id/v7"
                    android:layout_alignParentRight="true"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGray"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_friday"
                    android:layout_toLeftOf="@id/v8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="周五"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

                <View
                    android:id="@+id/v8"
                    android:layout_alignParentRight="true"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGray"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_saturday"
                    android:layout_toLeftOf="@id/v9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="周六"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

                <View
                    android:id="@+id/v9"
                    android:layout_alignParentRight="true"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGray"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_sunday"
                    android:layout_toLeftOf="@id/v10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="周日"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

                <View
                    android:id="@+id/v10"
                    android:layout_alignParentRight="true"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGray"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/v1"
        android:layout_below="@id/ll_weekdays"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"/>

    <ScrollView
        android:layout_below="@id/v1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:id="@+id/v11"
                    android:layout_alignParentLeft="true"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGray"/>

                <LinearLayout
                    android:layout_toRightOf="@id/v11"
                    android:layout_toLeftOf="@id/v12"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:gravity="center"
                        android:text="2"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:gravity="center"
                        android:text="3"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:gravity="center"
                        android:text="5"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:gravity="center"
                        android:text="6"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:gravity="center"
                        android:text="7"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:gravity="center"
                        android:text="8"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:gravity="center"
                        android:text="9"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:gravity="center"
                        android:text="10"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:gravity="center"
                        android:text="11"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"/>

                </LinearLayout>

                <View
                    android:id="@+id/v12"
                    android:layout_alignParentRight="true"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGray"/>

            </RelativeLayout>

            <GridLayout
                android:id="@+id/gl_curriculum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:columnCount="7"
                android:orientation="vertical"
                android:rowCount="11"></GridLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
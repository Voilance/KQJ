<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/layout_welcome_button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登陆"
        android:textAllCaps="false">
    </Button>

    <Button
        android:id="@+id/layout_welcome_button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textAllCaps="false">
    </Button>

    <Button
        android:id="@+id/layout_welcome_button_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="首页"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/layout_welcome_button_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建活动"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/layout_welcome_button_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查看活动"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/layout_welcome_button_mycreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我创建的活动"
        android:textAllCaps="false"/>

</LinearLayout>